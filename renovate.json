{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "schedule": ["before 9am on weekday"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchManagers": ["cargo"],
      "groupName": "rust dependencies"
    },
    {
      "matchUpdateTypes": ["patch", "minor"],
      "automerge": true,
      "addLabels": ["automerge"]
    }
  ]
}
