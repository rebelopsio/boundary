{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "simple",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": false,
  "include-component-in-tag": false,
  "packages": {
    ".": {
      "component": "boundary",
      "changelog-path": "CHANGELOG.md",
      "extra-files": [
        {
          "type": "toml",
          "path": "Cargo.toml",
          "jsonpath": "$.workspace.package.version"
        },
        {
          "type": "toml",
          "path": "Cargo.toml",
          "jsonpath": "$.workspace.dependencies.boundary-core.version"
        },
        {
          "type": "toml",
          "path": "Cargo.toml",
          "jsonpath": "$.workspace.dependencies.boundary-go.version"
        },
        {
          "type": "toml",
          "path": "Cargo.toml",
          "jsonpath": "$.workspace.dependencies.boundary-rust.version"
        },
        {
          "type": "toml",
          "path": "Cargo.toml",
          "jsonpath": "$.workspace.dependencies.boundary-typescript.version"
        },
        {
          "type": "toml",
          "path": "Cargo.toml",
          "jsonpath": "$.workspace.dependencies.boundary-java.version"
        },
        {
          "type": "toml",
          "path": "Cargo.toml",
          "jsonpath": "$.workspace.dependencies.boundary-report.version"
        },
        {
          "type": "toml",
          "path": "Cargo.toml",
          "jsonpath": "$.workspace.dependencies.boundary-lsp.version"
        }
      ]
    }
  }
}
